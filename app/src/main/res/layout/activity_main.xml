<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="224dp"
        android:layout_height="61dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aladin"
        android:gravity="center"
        android:textColor="#FA3F03"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="82dp"
        android:layout_height="57dp"
        android:fontFamily="@font/aladin"
        android:gravity="center"
        android:text="°F"
        android:textColor="#FA3F03"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="81dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/aladin"
        android:gravity="center"
        android:text="°C"
        android:textColor="#04F6DD"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editTextNumber"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.584" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/aladin"
        android:text="Temprature Convertor"
        android:textColor="#F30903"
        android:textColorHint="#050505"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:backgroundTint="#F1EAEA"
        android:fontFamily="@font/aladin"
        android:text="Enter Your Temperature in Celsius"
        android:textColor="#04F6DD"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="235dp"
        android:layout_height="74dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#F30903"
        android:ems="10"
        android:fontFamily="@font/aladin"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textColor="#04F6DD"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/aladin"
        android:gravity="center"
        android:text="Fahrenheit"
        android:textColor="#FA3F03"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <Button
        android:id="@+id/button"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#1D54B3"
        android:fontFamily="sans-serif"
        android:text="Convert To Fahrenheit"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="114dp"
        android:layout_height="69dp"
        android:background="@drawable/swapping"
        app:backgroundTint="#F84107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.394"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>